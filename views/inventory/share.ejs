<% include ../partials/header %>

    <div class="below-nav-group-title">
      Sharing inventory
    </div>



    <div class="middle-row-section">

      <div class="left-nav">

      </div>

      <div class="main-section">


        <div class="main-section-item">
          <form action="/<%=currentUser._id%>/inventory/<%=foundInventory._id%>/share" method="post">
            <div class="form-group">
              <label>Edit Inventory and Share</label>
              <textarea class="form-control" name="inventory" rows="4" cols="80"><%=foundInventory.post%></textarea>
            </div>

            <div class="main-section-item-post-image main-section-subitem">
              <%foundInventory.images.forEach(function(Image, index){%>
                <div class="main-section-item-post-image-subitem">
                  <a href="/<%=currentUser._id%>/post/<%=foundInventory._id%>/image/<%=index%>"><img width=500px src="data:image/png;base64,<%=Image["base64"]%>"></a>
                </div>
              <%})%>
            </div>

            <div class="form-flex">

              <div class="form-group form-flex-item">
                Price<input type="text" class="form-control"  name="price" value="<%=foundInventory.price%>">
              </div>

              <div class="form-group form-flex-item">
                Quantity<input type="text" class="form-control"  name="quantity" value="<%=foundInventory.quantity%>">
              </div>
            </div>

            <div class="form-group" style="margin-top:20px;">
              Show Acess:
              <input style="margin-left:10px;" type="checkbox" name="friend" value="friend" checked>Friends
              <input style="margin-left:10px;" type="checkbox" name="acquaintance" value="acquaintance">Acquaintances
              <input style="margin-left:10px;" type="checkbox" name="unconnected" value="unconnected" id="broadcast_checkbox">Broadcast
            </div>

            <div id="select-category" class="form-group hide">
              Categories:
              <%foundCategories.forEach(function(Category){%>
                <input style="margin-left:10px;" type="checkbox" name="category" value="<%=Category.name%>"><%=Category.name%>
              <%})%>

            </div>

            <div class="form-group">
              Groups:
              <%foundUser.groups.forEach(function(Group){%>
                <input style="margin-left:10px;" type="checkbox" name="Group-<%=Group._id%>" value="<%=Group.name%>"><%=Group.name%>
              <%})%>

            </div>

            <div class="form-group">
              Friends:
              <%foundUser.friends.forEach(function(Friend){%>
                <input style="margin-left:10px;" type="checkbox" name="Friend-<%=Friend._id%>" value="<%=Friend.username%>"><%=Friend.username%>
              <%})%>

            </div>


            <div style="text-align:center">
              <button style="background:none;border:none">Submit</button>
            </div>





          </form>
        </div>


      </div>

      <div class="right-nav">

      </div>

    </div>





<script type="text/javascript" src="/javascript/inventory-share.js">

</script>


<% include ../partials/footer %>
